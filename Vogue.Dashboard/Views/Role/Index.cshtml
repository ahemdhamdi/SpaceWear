
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1 style=" text-align: center">All Roles</h1>
<hr />
<partial name="_RoleForm" model="new RoleFormViewModel()" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover" style="margin-left: 10px; margin-right:10px; width:90%">
        <thead>
            <tr>
                
                @* <th scope="col">@Html.DisplayNameFor(r=>r.Id)</th> *@
                <th scope="col">@Html.DisplayNameFor(r=>r.Name)</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    
                    @* <td>@Role.Id</td> *@
                    <td>@Role.Name</td>
                    <td><a class="btn btn-outline-warning ps-4 pe-4" asp-action="Edit" asp-route-id="@Role.Id">Edit</a>  <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Role.Id">Delete</a></td>
                   

                </tr>
            }

           
        </tbody>
    </table>

}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>
            There is No Records
        </h2>

    </div>
    
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}