@model RoleFormViewModel


<form asp-action="Create">
    @* asp-action="Create" *@
    <div class="input-group mb-2">

        <div style="margin-left: 10px">
            <input asp-for="Name" class="form-control" placeholder="Enter Role Name"
                   style="border-radius: 20px; width: 200px; margin-right:20px" />
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-primary "
                    style="border-radius: 5px; margin-left:10px;">
                Add New Role
            </button>
        </div>
    </div>
    <span asp-validation-for="Name" class="text-danger" style="margin-left: 15px"></span>
</form>