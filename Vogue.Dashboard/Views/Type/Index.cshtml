@model IReadOnlyList<ProductType>
@{
    ViewData["Title"] = "Index";
}
<h1 style="text-align: center">All Types</h1>
<partial name="CreateForm" model="new ProductType()" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover" style="margin-left:15px; margin-right:15px; width:90%">
        <thead>
            <tr>
                @*  <th>Id</th> *@
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @* <td>@item.Id</td> *@
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                        <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen"></i> Edit</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There is No Types!</h2>
    </div>
}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}



