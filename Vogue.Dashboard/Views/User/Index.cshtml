@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center">All Users</h1>
<hr />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover" style="margin-left: 10px; margin-right: 10px; width:90%">
        <thead>
            <tr>

                <th scope="col">@Html.DisplayNameFor(U => U.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(U => U.DisplayName)</th>
                <th scope="col">@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                <th scope="col">@Html.DisplayNameFor(U => U.Email)</th>
               
                <th scope="col">Roles</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>

                    <td>@User.UserName</td>
                    <td>@User.DisplayName</td>
                    <td>@User.PhoneNumber</td>
                    <td>@User.Email</td>
                    <td>@string.Join(",",User.Roles.ToList())</td>
                    <td><a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@User.Id">Edit</a></td>

                </tr>
            }


        </tbody>
    </table>

}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>
            There is No Records
        </h2>

    </div>

}
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

